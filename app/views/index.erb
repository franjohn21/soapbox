<!-- Jumbotron to span width of page -->
  <div class="container splash_bgrnd">
    <div class="row">
      <!-- <div id="jumbotron-index"></div> -->
  <!-- <a href="#" class="paulund_modal">Splash</a> -->

    <!-- Begin Splash List -->
        <div class="col-md-10">
          <ul id="splash_list" class="col-md-10">
            <% @splashes.each do |splash| %>
            <li id="<%= splash.id %>" class="splash inline-list">
              <% author = User.find(splash.author_id) %><div id="splash-created-on"><%= time_ago %></div><%= author.first_name %> <%= author.last_name %><br>
              <%= splash.content %>
              <!-- Begin Comment List -->
              <ul id="comment-<%=splash.id%>" class="comment-list">
                <li>
                  <form action='/splashes/<%=splash.id%>/comment' method='post' class="submit_comment" id="submit-comment-<%=splash.id%>">
                    <input type='textarea' rows="4" cols="10" placeholder='Reply' name="content">
                  </form>
                </li>
                <li role="presentation" class="divider"></li>
                <% splash.comments.each do |comment| %>
                <% user = User.find(comment.user_id) %>
                <li role="presentation"><p><%= comment.user.first_name %> <%= comment.user.last_name %></li>
                <li role="presentation"><%= comment.content %></li></p>
                <% end %>
              </ul>
            </li>
            <% end %>
          </ul>
        </div>
      <!-- </div> -->
    </div>
  </div>
</div>
