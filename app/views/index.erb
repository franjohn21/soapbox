<div class="container">
  <button id="create_splash">Splash!</button>
  
  <ul id="splash_list" style="display:block" list-type="none">
    <% @splashes.each do |splash| %>
      <li><%= splash.author_id %></li>
      <li><%= splash.content %></li>
    <% end %>
  </ul>
</div>

      <% if current_user == nil %>
      <a href="/auth/facebook">Login with facebook!!!!</a>
      <% else %>
        <a href="/splashes">Splashes </a>
        <a href="/logout">Logout </a>
      <% end %>
      
